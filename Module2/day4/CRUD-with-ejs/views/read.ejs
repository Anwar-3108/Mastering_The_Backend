<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Read Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900">
    <div class="align-center">
        <div class="mt-10 ml-10">
            <a href="/" class="text-blue-500">GO TO Home</a>
        </div>
    </div>
    <div class="container mx-auto px-5 py-24">
        <div class="flex flex-col text-center w-full mb-12">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-white">Our Users</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base text-gray-400">Here is the list of all registered users.</p>
        </div>
        <div class="flex flex-wrap -m-4">
            <% users.forEach(function(user) { %>
                <div class="p-4 lg:w-1/4 md:w-1/2 w-full">
                    <div class="h-full bg-gray-800 bg-opacity-75 px-8 py-8 rounded-lg overflow-hidden text-center relative">
                        <img alt="User" class="w-24 h-24 mb-4 object-cover object-center mx-auto rounded-full" src="<%= user.imageURL%>>" />
                        <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"><%= user.name %></h2>
                        <!-- <h1 class="title-font sm:text-2xl text-xl font-medium text-white mb-3">User Name</h1> -->
                        <p class="leading-relaxed mb-3 text-gray-400"><%= user.email %></p>
                        <div class="flex justify-center">
                            <a href="/edit/<%=user._id%>" class="mr-2 bg-indigo-500 hover:bg-indigo-600 text-white py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-indigo-400">Edit</a>
                            <a href="/delete/<%=user._id%>" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-400">Delete</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
