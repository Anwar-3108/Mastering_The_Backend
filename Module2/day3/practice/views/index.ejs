<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Task Manager</title>
</head>
<body>
  <div class="flex flex-col items-center justify-center w-full min-h-screen bg-gradient-to-r from-indigo-600 to-purple-600">
    <!-- Form Section -->
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-2xl mb-8">
      <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Create Task</h2>
      <form class="flex flex-col gap-4" method="POST" action="/create">
        <div>
          <input type="text" name="title" placeholder="Write your task title here" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
        </div>
        <div>
          <textarea name="details" placeholder="Write your task details here" class="w-full px-4 resize-none py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 h-32"></textarea>
        </div>
        <div>
          <input type="submit" value="Create Task" class="w-full py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600 transition duration-200 cursor-pointer" />
        </div>
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="w-full max-w-6xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task bg-white p-6 rounded-lg shadow-md">
            <h3 class="font-semibold text-lg text-gray-700 mb-2"><%= val %></h3>
            <p class="text-gray-600 mb-4"><%= val.details %></p>
            <a href="/files/<%=val%>" class="text-indigo-500 hover:underline">Read More</a>
          </div>
        <% }) %>
      <% } else { %>
        <div class="task bg-white p-6 rounded-lg shadow-md text-center">
          No tasks yet.
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
